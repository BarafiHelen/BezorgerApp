<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BezorgerApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:BezorgerApp.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="BezorgerApp">

    <ShellContent Title="Bestellingen" ContentTemplate="{DataTemplate views:OrdersPage}" Route="orders" />
    <ShellContent Title="Details" ContentTemplate="{DataTemplate views:OrderDetailPage}" Route="orderdetail" />
    <ShellContent Title="Handtekening" ContentTemplate="{DataTemplate views:SignaturePage}" Route="signature" />
    <ShellContent Title="Overzicht" ContentTemplate="{DataTemplate views:DeliverySummaryPage}" Route="summary" />

</Shell>
