<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BezorgerApp.Views.DeliverySummaryPage"
             Title="Dagoverzicht">
    <StackLayout Padding="20" Spacing="10">
        <Label Text="Leveringen vandaag" FontSize="20" FontAttributes="Bold" />

        <CollectionView ItemsSource="{Binding Orders}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Padding="5">
                        <Label Text="{Binding CustomerName}" FontAttributes="Bold" />
                        <Label Text="{Binding Status}" />
                        <Label Text="{Binding PlannedTime, StringFormat='{}{0:t}'}" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>
