<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BezorgerApp.Views.OrdersPage"
             Title="OrdersPage">
    <ScrollView>
        <StackLayout Padding="20">
            <Label Text="Bestellingen"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <CollectionView ItemsSource="{Binding Orders}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="10" Padding="10" BorderColor="LightGray" CornerRadius="10">
                            <StackLayout>
                                <Label Text="{Binding CustomerName}" FontAttributes="Bold" FontSize="18" />
                                <Label Text="{Binding Address}" />
                                <Label Text="{Binding Status}" TextColor="Blue" />
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ScrollView>
</ContentPage>