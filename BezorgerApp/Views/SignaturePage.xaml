<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BezorgerApp.Views.SignaturePage"
             Title="Handtekening">
    <StackLayout Padding="20" Spacing="15">
        <Label Text="Laat de klant hieronder tekenen:" FontAttributes="Bold" />

        <!-- Hier later een echte signature-pad toevoegen (via plugin of SkiaSharp) -->
        <BoxView HeightRequest="200" Color="LightGray" />

        <Button Text="Bevestig levering" />
    </StackLayout>
</ContentPage>
